<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hana.app.repository.UserRepository">

    <select id="selectOne" parameterType="String" resultType="userDto">
        SELECT *
        FROM user
        WHERE user_id=#{userId}
    </select>
    <select id="findByEmail" parameterType="String" resultType="userDto">
        SELECT *
        FROM user
        WHERE email=#{email}
    </select>
    <select id="findByNickname" parameterType="String" resultType="userDto">
        SELECT *
        FROM user
        WHERE nickname = #{nickname}
    </select>

    <select id="select" resultType="userDto">
        SELECT *
        FROM user
    </select>

    <insert id="insert" parameterType="userDto">
        INSERT INTO user (user_id, email, nickname, gender, is_admin, create_date)
        VALUES (0, #{email}, #{nickname},#{gender},#{isAdmin},0 ,NOW());
    </insert>

    <update id="update" parameterType="userDto">
        UPDATE user
        SET nickname=#{nickname},update_date=NOW(), status=#{status}, suspended_date=#{suspendedDate}
        WHERE user_id=#{userId}
    </update>

    <delete id="delete" parameterType="String">
        DELETE FROM user WHERE user_id=#{userId}
    </delete>


</mapper>